{
  "name": "baseline-react-tests",
  "version": "1.0.0",
  "description": "a basic setup for testing react components",
  "main": "index.js",
  "scripts": {
    "test": "npx mocha --watch --require ./src/tests/mocha-setup.js ./src/**/test-*.js"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-destructuring",
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lostclawz/baseline-react-tests.git"
  },
  "keywords": [
    "react",
    "tests"
  ],
  "author": "Philip Kuperberg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lostclawz/baseline-react-tests/issues"
  },
  "homepage": "https://github.com/lostclawz/baseline-react-tests#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "webpack-cli": "^3.1.2",
    "webpack": "^4.27.1",
    "sinon": "^7.2.2",
    "prop-types": "^15.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-decorators": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.10.0",
    "eslint-plugin-react-hooks": "0.0.0",
    "jsdom": "^13.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0"
  }
}
